{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "preserveSymlinks": true,
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["common/components/*"],
      "@/utils/*": ["common/utils/*"],
      "@/data/*": ["data/*"],
      "@/layouts/*": ["layouts/*"],
      "@/module/*": ["module/*"],
      "@/server/*": ["server/*"],
      "@/styles/*": ["styles/*"],
      "@/types": ["types/index"],
      "@/types/*": ["types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["node_modules"]
}
